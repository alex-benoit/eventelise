<%= simple_form_for(@event) do |f| %>
    <%= f.input :title, label: "Enter a title", placeholder: "After-work drinks in Soho" %>
    <%= f.input :description, label: "Enter a description", placeholder: "Going for some drinks in at 'The Water's Poet' in Soho!" %>
    <%= f.input :address, label: "Enter an address", placeholder: "22 Elder Street" %>
    <%= f.input :postcode, label: "Enter a postcode", placeholder: "E1 6BT" %>
    <%= f.input :city, label: "Enter a city", placeholder: "London" %>
    <%= f.input :interests, collection: ["Clubbing", "Drinks", "Sports", "Travel"], prompt: "Choose an interest" %>
    <%= f.input :starts_at_day, as: :string, input_html: { data: { provide: :datepicker } } %>
    <%= f.input :starts_at_time, as: :time %>
    <%= f.input :ends_at_day, as: :string, input_html: { data: { provide: :datepicker } } %>
    <%= f.input :ends_at_time, as: :time %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.button :submit, class: "btn btn-primary"  %>
<% end %>
