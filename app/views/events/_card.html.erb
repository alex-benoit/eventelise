<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path event.photo, height: 300, width: 400 %>');">
  <div class="card-category"><%= event.interests.join(", ") %></div>
  <div class="card-description">
    <h2><%= event.title.capitalize %></h2>
    <p><%= event.postcode %></p>
  </div>
  <%= link_to "", event_path(id: event.id), class:"card-link"%>
  <img class="card-user avatar-large" src="http://unsplash.it/500/500?random">
</div>
